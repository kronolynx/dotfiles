# Navigation
ralt - h : yabai -m window --focus west
ralt - j : yabai -m window --focus south
ralt - k : yabai -m window --focus north
ralt - l : yabai -m window --focus east

# security not disabled this ones are done from keyboard config
### Switch focus to another destop ###
# ralt - 1 : yabai -m space --focus 1
# ralt - 2 : yabai -m space --focus 2
# ralt - 3 : yabai -m space --focus 3
# ralt - 4 : yabai -m space --focus 4
# ralt - 5 : yabai -m space --focus 5
# ralt - 6 : yabai -m space --focus 6
# ralt - 7 : yabai -m space --focus 7
# ralt - 8 : yabai -m space --focus 8
# ralt - 9 : yabai -m space --focus 9
# ralt - 0 : yabai -m space --focus 10
# ralt - l : yabai -m space --focus next
# ralt - h : yabai -m space --focus prev
# 
### Send a window to a space and follow ### (uses skhd to emulate the keybinding to move to workspace)
ralt + shift - 1 : yabai -m window --space 1  ; skhd -k "alt - 1"
ralt + shift - 2 : yabai -m window --space 2  ; skhd -k "alt - 2"
ralt + shift - 3 : yabai -m window --space 3  ; skhd -k "alt - 3"
ralt + shift - 4 : yabai -m window --space 4  ; skhd -k "alt - 4"
ralt + shift - 5 : yabai -m window --space 5  ; skhd -k "alt - 5"
ralt + shift - 6 : yabai -m window --space 6  ; skhd -k "alt - 6"
ralt + shift - 7 : yabai -m window --space 7  ; skhd -k "alt - 7"
ralt + shift - 8 : yabai -m window --space 8  ; skhd -k "alt - 8"
ralt + shift - 9 : yabai -m window --space 9  ; skhd -k "alt - 9"
ralt + shift - 0 : yabai -m window --space 10 ; skhd -k "alt - 0"
# to get the keycodes in the terminal run: xkhd --observe
ralt + shift - 0x1B : yabai -m window --space 11 ; skhd -k "alt - 0x1B" # -
ralt + shift - 0x18 : yabai -m window --space 12 ; skhd -k "alt - 0x18" # =
ralt + shift - 0x21 : yabai -m window --space 13 ; skhd -k "alt - 0x21" # [
ralt + shift - 0x1E : yabai -m window --space 14 ; skhd -k "alt - 0x1E" # ]
ralt + shift - 0x29 : yabai -m window --space 15 ; skhd -k "alt - 0x29" # ;
ralt + shift - 0x27 : yabai -m window --space 16 ; skhd -k "alt - 0x27" # '

### Send a window to a space ###
ralt + ctrl - 1 : yabai -m window --space 1
ralt + ctrl - 2 : yabai -m window --space 2
ralt + ctrl - 3 : yabai -m window --space 3
ralt + ctrl - 4 : yabai -m window --space 4
ralt + ctrl - 5 : yabai -m window --space 5
ralt + ctrl - 6 : yabai -m window --space 6
ralt + ctrl - 7 : yabai -m window --space 7
ralt + ctrl - 8 : yabai -m window --space 8
ralt + ctrl - 9 : yabai -m window --space 9
ralt + ctrl - 0 : yabai -m window --space 10
# to get the keycodes in the terminal run: xkhd --observe
ralt + ctrl - 0x1B : yabai -m window --space 11 # -
ralt + ctrl - 0x18 : yabai -m window --space 12 # =
ralt + ctrl - 0x21 : yabai -m window --space 13 # [
ralt + ctrl - 0x1E : yabai -m window --space 14 # ]
ralt + ctrl - 0x29 : yabai -m window --space 15 # ;
ralt + ctrl - 0x27 : yabai -m window --space 16 # '
ralt + ctrl - p : yabai -m window --space prev   # Send window to space on the left
ralt + ctrl - n : yabai -m window --space next  # Send window to space on the right

# Moving windows
shift + ralt - h : yabai -m window --warp west
shift + ralt - j : yabai -m window --warp south
shift + ralt - k : yabai -m window --warp north
shift + ralt - l : yabai -m window --warp east

shift + ralt - left  : yabai -m window --warp west
shift + ralt - down  : yabai -m window --warp south
shift + ralt - up    : yabai -m window --warp north
shift + ralt - right : yabai -m window --warp east

# Set insertion point for focused container
shift + ctrl + ralt - h : yabai -m window --insert west
shift + ctrl + ralt - j : yabai -m window --insert south
shift + ctrl + ralt - k : yabai -m window --insert north
shift + ctrl + ralt - l : yabai -m window --insert east

shift + ctrl + ralt - left  : yabai -m window --insert west
shift + ctrl + ralt - down  : yabai -m window --insert south
shift + ctrl + ralt - up    : yabai -m window --insert north
shift + ctrl + ralt - right : yabai -m window --insert east
# 
# Float / Unfloat window
shift + ralt - f : yabai -m window --toggle float
# Float and center window
shift + ralt - c : yabai -m window --toggle float;\
                yabai -m window --grid 4:4:1:1:2:2
# 
# # Make fullscreen
ralt - a : yabai -m window --toggle zoom-fullscreen
shift + ralt - a : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')
# 
# ralt - return : open -n -a iTerm
#ralt - return : "${HOME}"/.config/yabai/scripts/open_iterm2.sh
ralt - return : "${HOME}"/.config/yabai/scripts/open_iterm2.sh

ralt - w : yabai -m window --close
# 
# Resize windows
cmd + ralt - h : \
    yabai -m window --resize left:-100:0 ; \
    yabai -m window --resize right:-100:0

cmd + ralt - j : \
    yabai -m window --resize bottom:0:100 ; \
    yabai -m window --resize top:0:100

cmd + ralt - k : \
    yabai -m window --resize top:0:-100 ; \
    yabai -m window --resize bottom:0:-100

cmd + ralt - l : \
    yabai -m window --resize right:100:0 ; \
    yabai -m window --resize left:100:0

# change layout of desktop
#ralt - e : yabai -m space --layout bsp
#ralt - l : yabai -m space --layout float
#ralt - s : yabai -m space --layout stack

# balance size of windows
ralt + lalt - r : yabai -m space --balance
# mirror tree y-axis
ralt + lalt - y : yabai -m space --mirror y-axis
# mirror tree x-axis
ralt + lalt - x : yabai -m space --mirror x-axis

# go back to previous workspace  (requires to disable)
# alt - tab : yabai -m space --focus recent
# focus previous or next window in window tree (options: prev, next)
shift + ralt - tab : yabai -m window --focus next
cmd + ralt - tab : yabai -m window --focus prev
# focus window that was previously focused
ralt - tab : yabai -m window --focus recent


## send window to monitor and follow focus
ralt + shift - d  : yabai -m window --display next && yabai -m display --focus next || yabai -m window --display first && yabai -m display --focus first

#ralt + ctrl - l  : yabai -m window --display recent; yabai -m display --focus recent
#ralt + ctrl - k  : yabai -m window --display prev; yabai -m display --focus prev
#ralt + ctrl - j  : yabai -m window --display next; yabai -m display --focus next
#
## send window to other monitor
ralt + shift - d  : yabai -m window --display next  || yabai -m window --display first 
## focus monitor
ralt - d  : yabai -m display --focus next || yabai -m display --focus first

