alias yaourt="yaourt --pager --color"
alias pacmanGhost="~/.pacman.sh"
alias shivita="toilet -f mono12 -F rainbow 'krono' | ponythink -f winona"
#alias ls="colorls"
alias ip="ip -c"
alias rm="rm -i"
alias x="ranger"
alias c="cmus"
alias h="htop"
alias man="man_color"
alias m=mp3download
alias v=videodownload
alias zshrc='$EDITOR ~/.zshrc'
alias G='| grep'
alias H='| head'
alias L='| less'
alias M='| most'
alias P='2>&1| pygmentize -l pytb'
alias T='| tail'
alias S="yay -Ss"
alias I="yay -Syu"


