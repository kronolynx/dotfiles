# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

# jump around 
if [ -f ~/.z.sh ]; then
    source ~/.z.sh
fi

# Test and source exported variables
if [ -f ~/.zsh/exports ]; then
    source ~/.zsh/exports
fi
# Test and then source some options
if [ -f ~/.zsh/options ]; then
    source ~/.zsh/options
fi
# Test and then source alias definitions.
if [ -f ~/.zsh/aliases ]; then
    source ~/.zsh/aliases
fi
# Test and then source the functions.
if [ -f ~/.zsh/functions ]; then
    source ~/.zsh/functions
fi
# Test and then source the completionsystem
if [ -f ~/.zsh/compctl ]; then
    source ~/.zsh/compctl
fi
# Test and then source the zstyles
if [ -f ~/.zsh/style ]; then
    source ~/.zsh/style
fi
# Test and then source the powerlevel9k ( must be sourced before ohmyzsh if not missing icons)
if [ -f ~/.zsh/powerlevel9k ]; then
    source ~/.zsh/powerlevel9k
    ZSH_THEME="powerlevel9k/powerlevel9k"
else
    ZSH_THEME="agnoster"
fi
# Test and then source the keybindings
if [ -f ~/.zsh/bindings ]; then
    source ~/.zsh/bindings
fi
# Test and then source work related
if [ -f ~/.zsh/work ]; then
    source ~/.zsh/work
fi
# Test and then source the wretched rest 
if [ -f ~/.zsh/misc ]; then
    source ~/.zsh/misc
fi


# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git up vi-mode extract zsh-history-substring-search zsh-syntax-highlighting zsh-autosuggestions)

source $ZSH/oh-my-zsh.sh

# Test and then source zsh highlight (Must be sourced after oh-my-zsh)
if [ -f ~/.zsh/stylehighlight ]; then
    source ~/.zsh/stylehighlight
fi


