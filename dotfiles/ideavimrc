"actions https://gist.github.com/zchee/9c78f91cc5ad771c1f5d
let mapleader=" "
source ~/.vimrc

set showmode
set history=1000

" tabs {{{
nnoremap <C-w>c :action CloseContent<cr>
nnoremap <C-w>o :action CloseAllEditorsButActive<cr>
nnoremap <C-w>a :action CloseAllEditors<cr>
nnoremap <C-w>g :action CloseEditorsGroup<cr>
nnoremap <C-w>r :action ReopenClosedTab<cr>
nnoremap <C-w>m :action MoveEditorToOppositeTabGroup<cr>

nnoremap <A-h> gT
nnoremap <A-l> gt
nnoremap <C-s-tab> gT
nnoremap <C-tab> gt
" duplicate tab
noremap <leader>yt :action OpenEditorInOppositeTabGroup<cr>
" }}}

" windows {{{
" easy window navigation
nnoremap <C-l> <C-w>l
nnoremap <C-j> <C-w>j
nnoremap <C-h> <C-w>h
nnoremap <C-k> <C-w>k
 
nnoremap <C-w>s :action SplitHorizontally<cr>
nnoremap <C-w>v :action SplitVertically<cr>
noremap  <A-z> :action HideAllWindows<cr>
nnoremap <A-t> :action ActivateProjectToolWindow<cr>
nnoremap <A-s> :action ActivateTerminalToolWindow<cr>
nnoremap <A-g> :action ActivateVersionControlToolWindow<cr>
" nnoremap <A-s> :action Activatesbt-shell-toolwindowToolWindow<cr>
nnoremap <A-b> :action ActivatesbtToolWindow<cr>
" }}}

" Plugins {{{
set surround
set multiple-cursors
" multiple cursors
map <A-M>  <A-N>
" }}}

" code navigation {{{
nnoremap <leader>gs :action GotoSuperMethod<cr>
nnoremap <leader>fu :action FindUsages<cr>
nnoremap <leader>gf :action GotoFile<cr>
nnoremap <leader>gc :action GotoClass<cr>
nnoremap <leader>fp :action FindInPath<cr>
nnoremap <leader>se :action SearchEverywhere<cr>
nnoremap <leader>ee :action GotoNextError<CR>
nnoremap <leader>EE :action GotoPreviousError<CR>
nnoremap <A-C-d> :action Back<cr>
nnoremap <A-C-s> :action Forward<cr>
" }}}

" code edit {{{
nnoremap <leader>rr :action RenameElement<cr>
nnoremap <leader>ff :action ReformatCode<CR>
nnoremap <leader>sr :action Replace<cr>
" }}}


" file navigation and tools {{{
nnoremap <leader>fs :action FileStructurePopup<cr>
nnoremap <leader>sw :action Switcher<cr>
nnoremap <leader>tw :action ActivateProjectToolWindow<cr>
nnoremap <leader>rf :action RecentFiles<cr>
map <A-s> :action ActivateTerminalToolWindow<cr>
" }}}

" other {{{
noremap <leader>v <ESC>:action EvaluateExpression<CR>
nnoremap <leader>w :action SaveAll<cr>
nnoremap <leader>ll :action CompileProject<cr>
" remove extra whitespace
nmap <leader>cc :%s/\s\+$<CR><Paste> 
" {{{
